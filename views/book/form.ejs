<form method="POST" class="mt-5" enctype="multipart/form-data">
  <div class="form-group">
    <label for="inputTitle">Заголовок</label>
    <input
      type="text"
      value="<%= book.title %>"
      name="title"
      class="form-control"
      id="inputTitle"
    >
  </div>

  <div class="form-group">
    <label for="inputDesc">Описание</label>
    <textarea
      rows="3"
      name="description"
      class="form-control"
      id="inputDesc"
    ><%= book.description %></textarea>
  </div>

  <div class="form-group">
    <label for="inputAthors">Авторы</label>
    <input
      type="text"
      value="<%= book.authors %>"
      name="authors"
      class="form-control"
      id="inputAthors"
    >
  </div>

  <div class="form-group">
    <label for="inputfileBook">Загрузить файл книги</label>
    <input
      type="file"
      value="<%= book.fileBook %>"
      name="fileBook"
      class="form-control"
      id="inputfileBook"
      accept="<%= allowedTypes %>"
    >
  </div>

  <div class="form-group text-right ">
    <button type="submit" class="btn btn-primary">Сохранить</button>
  </div>
</form>
