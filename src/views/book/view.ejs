<%- include('../partials/layout-start', { title }) %>
<%- include('../partials/menu') %>
<h1><%= title %></h1>

<div class="row">
  <div class="col-sm-8">
    <div class="card">
      <div class="card-body">

        <h5 class="card-title"><%= book.title %></h5>
        <% if (book.description) { %>
          <p class="card-text">
            <strong>Описание</strong>
            <%= book.description %>.
          </p>
        <% } %>
        <% if (book.authors) { %>
          <p class="card-text">
            <strong>Авторы:</strong>
            <%= book.authors %>.
          </p>
        <% } %>
        <% if (book.fileName && book.fileBook) { %>
          <p class="card-text">
            <a class="btn btn-sm btn-primary" href="/books/<%= book.id %>/download" download>
              Скачать <%= book.fileName %>
            </a>
          </p>
        <% } %>

        <div class="text-right">
          <a class="btn btn-sm btn-primary" href="/books/update/<%= book.id %>">
            <i class="fa fa-pencil" aria-hidden="true"></i>
          </a>
          <form action="/books/delete/<%= book.id %>" method="POST" class="d-inline">
            <button class="btn btn-sm btn-danger">
              <i class="fa fa-trash" aria-hidden="true"></i>
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/layout-end') %>
